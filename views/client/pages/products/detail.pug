extends ../../layouts/default.pug

block main
    .container.my-4
        if (product.title)
            h1(class="mb-4") #{product.title}

        if (product.price)
            div(class="mb-4")
                | Giá: 
                b #{product.price}$

        if (product.discountPercentage)
            div(class="mb-4")
                | Giảm giá: 
                b #{product.discountPercentage}%

        if (product.stock)
            div(class="mb-4")
                | Còn lại: 
                b #{product.stock}

        if (product.thumbnail)
            div(class="mb-4")
                img(
                    src=product.thumbnail
                    style="width: 100px"
                )
        
        if (product.position)
            div(class="mb-4")
                | Vị trí: 
                b #{product.position}

        if (product.description)
            div(class="mb-4") #{product.description}

        div(class="d-flex gap-2")
            a(
                class = "btn btn-primary"
                href="/products"
            ) Quay lại danh sách

            

    