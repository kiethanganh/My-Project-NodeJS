mixin alert-success(time)
  - if (messages.success)
    .message.info
      div(
        show-alert
        data-time=time
        class="alert alert-success"
      ) #{messages.success}

mixin alert-error(time)
  - if (messages.error)
    .message.info
      div(
        show-alert
        data-time=time
        class="alert alert-danger"
      ) #{messages.error}
